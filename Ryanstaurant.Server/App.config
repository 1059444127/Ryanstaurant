<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="Ryanstaurant.UMS.Service.UMSService" behaviorConfiguration="bhNeedHttpGet">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8889/UMS/Service"/>
          </baseAddresses>
        </host>
        <endpoint address="net.tcp://localhost:8890/UMS/Service" binding="netTcpBinding" contract="Ryanstaurant.UMS.Interface.IUMSService">
          <identity>
            <dns />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" >
          <identity>
            <dns />
          </identity>
        </endpoint>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="bhNeedHttpGet">
          <!-- 为避免泄漏元数据信息，
          请在部署前将以下值设置为 false -->
          <serviceMetadata httpGetEnabled="True"/>
          <!-- 要接收故障异常详细信息以进行调试，
          请将以下值设置为 true。在部署前设置为 false 
          以避免泄漏异常信息 -->
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
</configuration>